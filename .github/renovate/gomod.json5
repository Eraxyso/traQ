{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "matchDepTypes": ["indirect"],
      "enabled": true
    },
    {
      "matchManagers": ["gomod"],
      "postUpdateOptions": ["gomodTidy", "gomodMassage"]
    },
    {
      "matchDepTypes": ["gomod"],
      "matchUpdateTypes": ["patch", "minor", "digest"],
      "groupName": "devDependencies (non-major)"
    }
  ]
}
